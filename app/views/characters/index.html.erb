<h1>Table :v</h1>
<table class="tablestyle">
  <tr>
    <th>Name</th>
    <th>Lvl</th>
    <th>Characteristic</th>                     
    <th>Exp</th>
    <th>Color</th>
  </tr>

 
  <% @all_character.each do |item| %>
    <tr> 
      <td><%=item.name%></td> 
      <td><%=item.lvl%></td> 
      <td><%=item.characteristic%></td> 
      <td><%=item.exp%></td>
      <td><%=item.color%></td>
   </tr> 
  <% end %> 
</table>
